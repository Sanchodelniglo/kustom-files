Config {font     = "xft:Iosevka Nerd Font:size=12:antialias=true"
       , additionalFonts = ["xft:JetBrainsMono Nerd Font:size=10:bold:antialias=true"]
       , bgColor  = "#1f2623"
       , fgColor  = "#f8f8f2"
       , position = TopH 30
       , border   = BottomB
       , borderWidth = 3
       , borderColor = "#2de0a7"
       , commands = [ Run Weather "EGPF"
                        [ "--template", "<weather> <tempC>°C"
                        , "-L", "0"
                        , "-H", "25"
                        , "--low"   , "lightblue"
                        , "--normal", "#f8f8f2"
                        , "--high"  , "red"
                        ] 36000
                    , Run Cpu
                        [ "-t", " <vbar>"
                        , "-L", "50"
                        , "-H", "75"
                        , "--high"  , "#ff5555"
                        , "--normal", "#f1fa8c"
                        , "--low"   , "#2de0a7"
                        ] 10
                    , Run Alsa "default" "Master"
                        [ "--template", "蓼 <status><volumevbar>"
                        -- , "--suffix"  , "True"
                        -- , "--"
                        -- , "--on", ""
                        , "-L", "60"
                        , "-H", "80"
                        , "--high"  , "#ff5555"
                        , "--normal", "#f1fa8c"
                        , "--low"   , "#2de0a7"
                        ]
                    , Run Memory
                        ["--template", " <usedvbar>"
                        , "-L", "50"
                        , "-H", "75"
                        , "--high"  , "#ff5555"
                        , "--normal", "#f1fa8c"
                        , "--low"   , "#2de0a7"
                        ] 10
                    , Run Swap [] 10
                    , Run Com "bash" [".xmonad/scripts/battery.sh"] "battery" 3600
                    , Run Wireless "wlan0" [
                        "-t", "<essid> <qualityvbar>"
                        , "-L", "25"
                        , "-H", "75"
                        , "--low"   , "#ff5555"
                        , "--normal", "#f1fa8c"
                        , "--high"  , "#2de0a7"

                        ] 10
                    , Run Date "%a %Y-%m-%d <fc=#2de0a7>%H:%M</fc>" "date" 10
                    , Run Com "playerctl" ["metadata", "--format", "<fc=#1f2623,#2de0a7><fn=1> 懶 {{ artist }}-{{ title }} </fn></fc>"] "player" 10
                    , Run UnsafeStdinReader
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%UnsafeStdinReader% • %player%}{ %alsa:default:Master% • %cpu% • %memory% • %wlan0wi% • %battery% • %date% "
       }

